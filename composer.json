{
  "name": "nettrine/annotations",
  "description": "Doctrine Annotations for Nette Framework",
  "keywords": ["nette", "doctrine", "annotations"],
  "type": "library",
  "license": ["MIT"],
  "homepage": "https://github.com/nettrine/annotations",
  "authors": [
    {
      "name": "Milan Felix Sulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">=5.6",
    "doctrine/annotations": "~1.4",
    "nette/di": "^2.4.9",
    "nette/utils": "^2.4.8",
    "doctrine/cache": "~1.6.2 || ~1.7.0"
  },
  "require-dev": {
    "ninjify/qa": "~0.4.0",
    "ninjify/nunjuck": "~0.2.0"
  },
  "autoload": {
    "psr-4": {
      "Nettrine\\Annotations\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/cases/"
    }
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p php --colors 1 -C -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:0.8.5",
      "composer require -d temp/phpstan phpstan/phpstan-nette:0.8.3"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l 7 -c phpstan.neon src"
    ]
  }
}
